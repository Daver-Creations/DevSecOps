pipeline {
    agent any
    parameters {
         environment {
            IMAGE_NAME = 'myhttpd'
            VERSION = "v${BUILD_ID}.${BUILD_NUMBER}"    // v12.13
         }
    }
    stages {
        stage('Verify Docker') {
            steps {
                retry(3) {
                    echo "Verifying Docker"
                }
                sleep(10)
                sh "docker --version"
            }
        }
        stage('Verify Internet') {
            steps {
                retry(3) {
                    timeout(time: 3, units: 'SECONDS') {
                        sh 'ping -c 6 8.8.8.8'
                    }
                }
            }
        }
        // stage('Build Docker Image') {
        //     steps {
        //         dir('Task') {

        //         }
        //     }
        // }
    }
}